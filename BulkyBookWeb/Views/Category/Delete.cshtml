@model Category

<form method="post" asp-action="Delete">
    <div class="border p-3 mt-4">
        <input asp-for="Id" hidden />
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" disabled />
        </div>
        <div class="mt-3 m-1">
            <div class="mb-2">
                <button type="submit" class="btn btn-primary" style="width:20%">Delete</button>
            </div>
            <div class="mb-2">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:20%">Go back to list</a>
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}